# ===== CONFIGURAÇÕES DO GOOGLE OAUTH =====
# Obtenha estas credenciais no Google Cloud Console
# https://console.cloud.google.com/

# Client ID do Google OAuth 2.0
GOOGLE_CLIENT_ID=SEU_CLIENT_ID_AQUI.apps.googleusercontent.com

# Client Secret do Google OAuth 2.0 (opcional para frontend)
GOOGLE_CLIENT_SECRET=SEU_CLIENT_SECRET_AQUI

# ===== CONFIGURAÇÕES DO SERVIDOR =====
# Porta do servidor (padrão: 3001)
PORT=3001

# Ambiente (development, production)
NODE_ENV=development

# ===== CONFIGURAÇÕES DE DOMÍNIO =====
# Domínio corporativo permitido para login
DOMINIO_PERMITIDO=@velotax.com.br

# URLs autorizadas (separadas por vírgula)
AUTHORIZED_ORIGINS=http://localhost:3001,https://velotax-bot-v2.vercel.app/

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
# Chave secreta para sessões (gere uma chave aleatória de 64 caracteres)
SESSION_SECRET=GERE_UMA_CHAVE_ALEATORIA_DE_64_CARACTERES_AQUI

# Tempo de expiração da sessão em horas (padrão: 24)
SESSION_EXPIRATION_HOURS=24

# ===== CONFIGURAÇÕES DE LOG =====
# Habilitar logs detalhados (true/false)
ENABLE_DETAILED_LOGS=true

# Diretório para arquivos de log
LOG_DIRECTORY=./logs

# ===== CONFIGURAÇÕES DO GOOGLE SHEETS =====
# ID da planilha do Google Sheets
GOOGLE_SHEETS_ID=SEU_GOOGLE_SHEETS_ID_AQUI

# Caminho para o arquivo de credenciais JSON do Google
GOOGLE_SHEETS_CREDENTIALS_PATH=google-sheets-credentials.json

# Caminho para o arquivo de token (gerado automaticamente)
GOOGLE_SHEETS_TOKEN_PATH=google-sheets-token.json

# Habilitar integração com Google Sheets (true/false)
ENABLE_GOOGLE_SHEETS=true

# ===== SERVICE ACCOUNT (PARA VERCEL) =====
# Email do Service Account (obtenha no Google Cloud Console)
GOOGLE_SERVICE_ACCOUNT_EMAIL=SEU_SERVICE_ACCOUNT_EMAIL@PROJETO.iam.gserviceaccount.com

# Chave privada do Service Account (obtenha no Google Cloud Console)
GOOGLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----

# ID do projeto Google Cloud
GOOGLE_PROJECT_ID=SEU_PROJETO_ID_AQUI

# ===== CONFIGURAÇÕES OPENAI =====
# Chave da API OpenAI
OPENAI_API_KEY=sk-SUA_CHAVE_OPENAI_AQUI

# Máximo de tokens para respostas
OPENAI_MAX_TOKENS=2000
